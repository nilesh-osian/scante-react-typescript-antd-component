{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "dist/types",
		"outDir": "dist",
		"jsx": "react",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["node", "jest", "@testing-library/jest-dom"],
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src", "src/types/global.d.ts"],
	"exclude": ["**/*.stories.tsx", "**/*.stories.ts", "**/*.test.tsx", "**/*.test.ts"]
}
